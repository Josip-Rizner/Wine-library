      <!-- Modal ADD-->
      <form action="../wine/create" method="POST">
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add wine</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">

                <div class="input-group mb-3">
                  <span class="input-group-text">Name</span>
                  <input type="text" required class="form-control" placeholder="Wine name" aria-label="Name:" name="name">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">Image url</span>
                  <input type="text" required class="form-control" placeholder="Image url" aria-label="Image url:" name="imageUrl">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">Country</span>
                  <input type="text" class="form-control" placeholder="Country" aria-label="Country:" name="country">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">Year</span>
                  <input type="text" required class="form-control" placeholder="Year" aria-label="Year:" name="year">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">Type</span>
                  <input type="text" required class="form-control" placeholder="Type" aria-label="Type:" name="type">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">ABV(%)</span>
                  <input type="text" required class="form-control" placeholder="ABV" aria-label="ABV:" name="ABV">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">Color</span>
                  <input type="text" required class="form-control" placeholder="Color" aria-label="Color:" name="color">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">Size</span>
                  <input type="text" class="form-control" placeholder="Size" aria-label="Size:" name="size">
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">$</span>
                  <input type="text" required class="form-control" aria-label="Amount (to the nearest dollar)" name="price">
                  <span class="input-group-text">.00</span>
                </div>

                <div class="input-group">
                  <span class="input-group-text">Description</span>
                  <textarea class="form-control" aria-label="Description" name="description"></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary" type="submit">Save</button>
              </div>
            </div>
          </div>
        </div>
