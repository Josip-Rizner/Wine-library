        <div id="costume_product" class="single-product">
          <div class="part-1 border">
            <ul>
              <li><a href="#"><i class="fas fa-plus" id="add" data-bs-toggle="modal"
                    data-bs-target="#exampleModal"></i></a></li>
            </ul>
          </div>
