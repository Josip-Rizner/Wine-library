<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/Login/fonts/icomoon/style.css">
    <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/Login/css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="/Login/css/style.css">
    <script src="/Register/script.js"></script>
    <title>Wine library - Sign Up</title>
  </head>
  <body>

    <header id="header" class="fixed-top d-flex align-items-center">
      <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">
        <h1>
          <a href="../">Wine Library</a>
        </h1>
        <nav id="navbar" class="navbar">
          <ul>
            <li><a class="nav-link scrollto active" href="../">Home</a></li>
            <li><a class="nav-link scrollto" href="../login">Sign in</a></li>
      </div>
    </header>

  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <img src="../Login/images/undraw_remotely_2j6y.svg" alt="" class="img-fluid">
        </div>
        <div class="col-md-6 contents">
          <div class="row justify-content-center">

            <div class="col-md-8">
              <div class="mb-4">
              <h1>Sign up</h1>
              <p class="mb-4"></p>
            </div>
            <form action="/signup" method="POST">
              <div class="form-group first">
                <input type="text" class="form-control" id="first_name" required placeholder="First Name" name="firstName"> 
              </div>
              <div class="form-group last mb-4">
                <input type="text" class="form-control" id="second_name" required placeholder="Last Name" name="lastName">
              </div>
              <div class="form-group last mb-4">
                <input type="password" class="form-control" id="password" required placeholder="password" name="password">
              </div>
              <div class="form-group last mb-4">
                <input type="password" class="form-control" id="password_confirmation" required placeholder="Confirm password">
              </div>
              <div class="form-group last mb-4">
                <input type="email" class="form-control" id="email" required placeholder="E-mail" name="email">
              </div>
              <input type="submit" value="Register"  id="register_user" class="btn btn-block btn-primary" onclick="register()">
              <span class="ml-auto"><a href="../login" class="register-user">Back to Sign in page.</a></span> 
            </form>
            </div>
          </div>  
        </div>
      </div>
    </div>
  </div>
  </body>
</html>
